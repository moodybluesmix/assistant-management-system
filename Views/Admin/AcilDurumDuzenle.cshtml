@model AsistanNobetYonetimi.Models.AcilDurum

<div class="container mt-4">
    <h2 class="text-primary">Acil Durum Duyurusu Düzenle</h2>

    <form method="post" asp-action="AcilDurumDuzenle">
        <input type="hidden" name="AcilDurumID" value="@Model.AcilDurumID" />
        <div class="form-group mb-3">
            <label for="Baslik">Başlık</label>
            <input type="text" class="form-control" id="Baslik" name="Baslik" value="@Model.Baslik" required />
        </div>
        <div class="form-group mb-3">
            <label for="Aciklama">Açıklama</label>
            <textarea class="form-control" id="Aciklama" name="Aciklama" rows="5" required>@Model.Aciklama</textarea>
        </div>
        <div class="form-group mb-3">
            <label for="BolumAdi">Bölüm Adı</label>
            <input type="text" class="form-control" id="BolumAdi" name="BolumAdi" value="@Model.BolumAdi" required />
        </div>
        <button type="submit" class="btn btn-warning">Güncelle</button>
    </form>
</div>
