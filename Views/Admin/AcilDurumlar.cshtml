@model IEnumerable<AsistanNobetYonetimi.Models.AcilDurum>

<div class="container mt-4">
    <h2 class="text-primary">Acil Durum Duyuruları</h2>
    <a asp-action="YeniAcilDurum" class="btn btn-success mb-3">Yeni Duyuru Ekle</a>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">Henüz bir acil durum duyurusu bulunmamaktadır.</p>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                    <th>Bölüm</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var duyuru in Model)
                {
                    <tr>
                        <td>@duyuru.AcilDurumID</td>
                        <td>@duyuru.Baslik</td>
                        <td>@duyuru.Aciklama</td>
                        <td>@duyuru.GondermeTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@duyuru.BolumAdi</td>
                        <td>
                            <a asp-action="AcilDurumDuzenle" asp-route-id="@duyuru.AcilDurumID" class="btn btn-warning btn-sm">Düzenle</a>
                            <form asp-action="AcilDurumSil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@duyuru.AcilDurumID" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
