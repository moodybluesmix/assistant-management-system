@model AsistanNobetYonetimi.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Admin Paneli";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container d-flex justify-content-center">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav text-center">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Asistanlar">Asistan Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="OgretimUyeleri">Öğretim Üyesi Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Bolumler">Bölüm Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="NobetYonetimi">Nöbet Planlaması</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Randevular">Randevu Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="AcilDurumlar">Acil Durum Duyuruları</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



<div class="container mt-5">
    <h2 class="text-center">Admin Paneli</h2>

    <!-- Özet Bilgiler -->
    <div class="row mt-4 text-center">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">Toplam Asistan</h5>
                    <p class="card-text">@Model.ToplamAsistan</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">Toplam Bölüm</h5>
                    <p class="card-text">@Model.ToplamBolum</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-warning">Bekleyen Randevular</h5>
                    <p class="card-text">@ViewBag.BekleyenRandevular</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger">Boş Yatak Sayısı</h5>
                    <p class="card-text">@ViewBag.BosYatakSayisi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Güncel Nöbet Durumları -->
    <div class="mt-5">
        <h3>Güncel Nöbet Durumları</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Bölüm</th>
                    <th>Asistan</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nobet in Model.Nobetler)
                {
                    <tr>
                        <td>@nobet.bolum.Isim</td>
                        <td>@nobet.asistan.AsistanIsimSoyisim</td>
                        <td>@nobet.NobetTarihi.ToShortDateString()</td>
                        <td>@nobet.NobetSaati</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Günlük Acil Durumlar -->
    <div class="mt-5">
        <h3>Günlük Acil Durum Haberleri</h3>
        <ul class="list-group">
            @foreach (var acil in Model.AcilDurumlar)
            {
                <li class="list-group-item">
                    <strong>@acil.Baslik:</strong> @acil.Aciklama (@acil.GondermeTarihi.ToShortDateString())
                </li>
            }
        </ul>
    </div>
</div>



