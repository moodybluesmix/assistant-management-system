
    @model AsistanNobetYonetimi.Models.AcilDurum

    <div class="container mt-4">
        <h2 class="text-primary">Yeni Acil Durum Duyurusu</h2>

        <form method="post" asp-action="YeniAcilDurum">
            <div class="form-group mb-3">
                <label for="Baslik">Başlık</label>
                <input type="text" class="form-control" id="Baslik" name="Baslik" required />
            </div>
            <div class="form-group mb-3">
                <label for="Aciklama">Açıklama</label>
                <textarea class="form-control" id="Aciklama" name="Aciklama" rows="5" required></textarea>
            </div>
            <div class="form-group mb-3">
                <label for="BolumAdi">Bölüm Adı</label>
                <input type="text" class="form-control" id="BolumAdi" name="BolumAdi" required />
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </form>
    </div>
