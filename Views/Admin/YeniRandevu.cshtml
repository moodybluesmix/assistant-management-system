<form method="post" asp-action="YeniRandevu">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label for="AsistanID">Asistan</label>
        <select class="form-control" id="AsistanID" name="AsistanID" required>
            <option value="">Asistan Seçin</option>
            @if (ViewBag.Asistanlar != null)
            {
                @foreach (var asistan in ViewBag.Asistanlar)
                {
                    <option value="@asistan.AsistanID">@asistan.AsistanIsimSoyisim</option>
                }
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="OgretimUyesiID">Öğretim Üyesi</label>
        <select class="form-control" id="OgretimUyesiID" name="OgretimUyesiID" required>
            <option value="">Öğretim Üyesi Seçin</option>
            @if (ViewBag.OgretimUyeleri != null)
            {
                @foreach (var ogretimUyesi in ViewBag.OgretimUyeleri)
                {
                    <option value="@ogretimUyesi.OgretimUyesiID">@ogretimUyesi.IsimSoyisim</option>
                }
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="RandevuTarihi">Tarih</label>
        <input type="date" class="form-control" id="RandevuTarihi" name="RandevuTarihi" required />
    </div>

    <div class="form-group mb-3">
        <label for="TimeSlot">Saat</label>
        <input type="text" class="form-control" id="TimeSlot" name="TimeSlot" placeholder="Örn: 14:00-14:30" required />
    </div>

    <div class="form-check mb-3">
        <input type="hidden" name="IsAvailable" value="false" />
        <input class="form-check-input" type="checkbox" id="IsAvailable" name="IsAvailable" value="true" checked />
        <label class="form-check-label" for="IsAvailable">Müsait</label>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
