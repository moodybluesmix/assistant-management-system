@{
    ViewData["Title"] = "Giriş Sayfası";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Segoe UI', sans-serif; color: #3B82F6; font-weight: bold;">Pediatri Yönetim Sistemi</h1>
    <p class="text-center" style="color: #64748B; font-size: 18px;">Lütfen giriş yapmak istediğiniz paneli seçin.</p>

    <div class="row g-4 mt-4">

        <!-- Admin Girişi -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100" style="background-color: #F1F5F9; border-radius: 12px;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color: #1E40AF; font-weight: bold;">Admin Girişi</h5>
                    <p class="card-text" style="color: #475569;">Admin Paneline erişmek için tıklayın</p>
                    <a asp-controller="Home" asp-action="Login" class="btn text-white" style="background-color: #3B82F6; border-radius: 8px;">Giriş Yap</a>
                </div>
            </div>
        </div>

        <!-- Kullanıcı Girişi -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100" style="background-color: #E0E7FF; border-radius: 12px;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color: #4C1D95; font-weight: bold;">Kullanıcı Girişi</h5>
                    <p class="card-text" style="color: #475569;">Asistan bilgilerinizle giriş yapın</p>
                    <a asp-controller="Asistan" asp-action="Login" class="btn text-white" style="background-color: #6366F1; border-radius: 8px;">Giriş Yap</a>
                </div>
            </div>
        </div>

        <!-- Öğretim Üyesi Girişi -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100" style="background-color: #FAE8FF; border-radius: 12px;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="color: #BE185D; font-weight: bold;">Öğretim Üyesi Girişi</h5>
                    <p class="card-text" style="color: #475569;">Öğretim Üyesi Paneline erişmek için tıklayın</p>
                    <a asp-controller="OgretimUyesi" asp-action="Login" class="btn text-white" style="background-color: #D946EF; border-radius: 8px;">Giriş Yap</a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
